generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id                  Int        @id @default(autoincrement()) @db.UnsignedInt
  name                String
  description         String       
  price               Int
  on_sale             Boolean
  images              Json?      @default("{}")
  stock_status        String
  stock_quantity      Int
  order               Order[]

}

model Order {
  id                  Int        @id @default(autoincrement()) @db.UnsignedInt
	order_date          DateTime
	customer_first_name String  
	customer_last_name  String
	customer_address    String
  customer_postcode   Int
	customer_city       String
	customer_email      String
	customer_phone      String
	order_total         Int
	created_at          DateTime
	updated_at          DateTime
	items               Product[]      
}

